<h1> Events Page </h1>

<%= link_to "List of all events ", events_path, class:"button" %>
<br>
<%= link_to "New event", new_event_path, class: "button"%>
<br>
<% @events.each do |event| %>
    <div class="card">
    <div class="card-body">
        <p style="float:right;" class="text-muted"><%= event.date %></p>
        <h5 class="card-title"><%= link_to event.name, event_path(event) %></h5>
        <p class="card-subtitle mb-2 text-muted"><small>created by <%= link_to event.creator.username, user_path(event.creator) %></small></p>
        <p><small><%= event.location %></small></p>
        <p class="card-text"><%= event.description %></p>
    </div>
    </div>
<% end %>